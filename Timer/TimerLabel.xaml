<UserControl x:Name="TimerLabelUserCopntrol"
             x:Class="Timer.TimerLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Timer"
             mc:Ignorable="d" 
             d:DesignHeight="13.277" d:DesignWidth="143.36"
             Height="auto" Width="auto">
    <UserControl.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="SuiGenerisRgFont">pack://aplication:,,,/../..\Resources/#Sui Generis Rg</FontFamily>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <TextBlock x:Name="MainTextBlock"
                       FontFamily="{StaticResource SuiGenerisRgFont}"
                       FontSize="18"
                       VerticalAlignment="Center" HorizontalAlignment="Center">
                <Run x:Name="HourRun" 
                     Text="{Binding ElementName=TimerLabelUserControl, Path=StartTime.Hours}">
                </Run><Run x:Name="TimerColon"
                     Text=":">
                </Run><Run x:Name="TimerMinuteDecRun" 
                     Text="0">
                </Run><Run x:Name="TimerMinuteRun"
                     Text="0"></Run>
            </TextBlock>
    </Grid>
</UserControl>
