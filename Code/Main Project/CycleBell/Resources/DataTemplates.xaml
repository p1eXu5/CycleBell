<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:CycleBell.ViewModels">

    <!-- BeginTimePointViewModel -->
    <DataTemplate x:Key="datatempl_BeginTimePointViewModel" DataType="vm:BeginTimePointViewModel">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1" />
                <RowDefinition Height="13" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2" />
            </Grid.ColumnDefinitions>
            
            <Path Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
                <Path.Data>
                    <PathGeometry Figures="M 0,13 L 0,0 1,0 Z" />
                </Path.Data>
            </Path>
            <Path Grid.Column="1" Grid.Row="0">
                <Path.Data>
                    <PathGeometry Figures="M 0,0 L 1,0 Z" />
                </Path.Data>
            </Path>
            <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Height="13" Margin="5,0">
                <Label Content="{Binding CycleName}" />
                <TextBox Text="{Binding NumberOfLoops, UpdateSourceTrigger=LostFocus, Mode=TwoWay}" Control.BorderBrush="{x:Null}"/>
            </StackPanel>
            <Path Grid.Column="2" Grid.Row="0" Grid.RowSpan="2">
                <Path.Data>
                    <PathGeometry Figures="M 0,0 L 1,0 1,7 2,7 Z" />
                </Path.Data>
            </Path>
            <Path Grid.Column="3" Grid.Row="1" >
                <Path.Data>
                    <PathGeometry Figures="M 0,6 L 1,6 Z" />
                </Path.Data>
            </Path>
            <Path Grid.Column="3" Grid.Row="0" Grid.RowSpan="2">
                <Path.Data>
                    <PathGeometry Figures="M 0,7 L 1,7 1,13 Z" />
                </Path.Data>
            </Path>
        </Grid>
    </DataTemplate>
    
    <!-- TimePointViewModel --> 
    <DataTemplate x:Key="datatempl_TimePointViewModel" DataType="{x:Type vm:TimePointViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!-- Point Data -->
            <TextBlock x:Name="m_pointName"
                               Grid.Column="0" Grid.Row="0"
                               HorizontalAlignment="Right" VerticalAlignment="Bottom"
                               Text="Рабочее время"
                               TextTrimming="CharacterEllipsis"
                               FontSize="14" FontFamily="Segoe UI Semibold" 
                                />
            <TextBlock x:Name="m_pointTime"
                               Grid.Column="1" Grid.Row="0"
                               HorizontalAlignment="Right" VerticalAlignment="Bottom"
                               Margin="20,0"
                               Text="18:00"
                               TextTrimming="CharacterEllipsis"
                               FontSize="18" RenderTransformOrigin="0.5,0.5"
                               >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform Y="2"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>

            </TextBlock>
            <!-- mute button --> 
            <TextBlock Grid.Row="0" Grid.Column="2" Margin="0"
                                Text="mute"
                                TextTrimming="CharacterEllipsis"
                                FontSize="14" Height="13"
                                >
                        <Hyperlink Command="{Binding MuteToggleCommand}">mute</Hyperlink>
            </TextBlock>

            <!-- add sound button -->
            <Button x:Name="m_addSoundButton"
                            Grid.Column="3" Grid.Row="0" Grid.RowSpan="2"
                            Margin="10,0"
                            Width="30" Height="30"
                            Content="{StaticResource Notes}"
                            Command="{Binding AddSoundCommand}">
            </Button>

            <ToggleButton x:Name="m_delTimePoint"
                                  Grid.Column="4" Grid.Row="0" Grid.RowSpan="2"
                                  Width="30" Height="30" Content="del" />
            <!-- sound name -->
            <TextBlock x:Name="m_soundName"
                               Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"
                               Margin="0,0,6,0"
                               HorizontalAlignment="Right"
                               Text="default"
                               TextTrimming="CharacterEllipsis"
                               FontSize="10"
                               />
        </Grid>

    </DataTemplate>
    
     <!--EndTimePointViewModel-->
    <DataTemplate x:Key="datatempl_EndTimePointViewModel" DataType="vm:EndTimePointViewModel">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1" />
                <ColumnDefinition />
                <ColumnDefinition Width="1" />
            </Grid.ColumnDefinitions>
            
            <Path Grid.Column="0">
                <Path.Data>
                    <PathGeometry Figures="M 0,0 L 0,7 Z" />
                </Path.Data>
            </Path>
            <Path Grid.Column="1">
                <Path.Data>
                    <PathGeometry Figures="M 0,7 L 1,7 Z" />
                </Path.Data>
            </Path>
            <Path Grid.Column="2">
                <Path.Data>
                    <PathGeometry Figures="M 0,0 L 0,7 Z" />
                </Path.Data>
            </Path>
        </Grid>
    </DataTemplate>

</ResourceDictionary>