<UserControl x:Class="CycleBell.Views.UserControls.TimerButtonsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CycleBell.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid Width="400" Height="44">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ToggleButton Grid.Column="0"
                      Width="48" Height="38"
                      HorizontalAlignment="Center">
            <ToggleButton.Content>
                <StaticResource ResourceKey="shape_Infinite" />
            </ToggleButton.Content>
        </ToggleButton>

        <ToggleButton Grid.Column="1"
                      Width="48" Height="38"
                      HorizontalAlignment="Center">
            <ToggleButton.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Path Grid.Column="0" Style="{StaticResource style_Path}" Data="{StaticResource gmtry_Play}"/>
                    <Path Grid.Column="2" Style="{StaticResource style_Path}" Data="{StaticResource gmtry_Pause}" Path.Margin="5" />
                </Grid>
            </ToggleButton.Content>
        </ToggleButton>

        <ToggleButton Grid.Column="2"
                      Width="48" Height="38"
                      HorizontalAlignment="Center">
            <ToggleButton.Content>
                <StaticResource ResourceKey="shape_Stop" />
            </ToggleButton.Content>
        </ToggleButton>

        <ToggleButton Grid.Column="3"
                      Width="48" Height="38"
                      HorizontalAlignment="Center">
            <ToggleButton.Content>
                <StaticResource ResourceKey="shape_Stop" />
            </ToggleButton.Content>
        </ToggleButton>
    </Grid>
</UserControl>
