<UserControl x:Class="CycleBell.Views.UserControls.TimerButtonsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CycleBell.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <UserControl.Resources>
    </UserControl.Resources>
    <!--    -->
    <!--    -->
    <Grid Width="280">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- infinite -->
        <ToggleButton Grid.Column="0"
                      Width="48" Height="38"
                      Margin="0,0,20,0"
                      HorizontalAlignment="Center" 
                      local:AttachedPropertyFactory.BorderColor="#8800008B"
                      >
            <Path Style="{StaticResource style_PathOfToggleButton}" Data="{StaticResource gmtry_Infinite}"/>
        </ToggleButton>

        <!-- play -->
        <ToggleButton Grid.Column="1"
                      Width="48" Height="38"
                      HorizontalAlignment="Center"
                      IsThreeState="True"
                      local:AttachedPropertyFactory.BorderColor="#88FF8C00"

                      >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Path Grid.Column="0" Style="{StaticResource style_PathOfToggleButton}" Data="{StaticResource gmtry_Play}"
                      Fill="{Binding Path=(local:AttachedPropertyFactory.FillColor1), 
                                     RelativeSource={RelativeSource FindAncestor, AncestorType=ToggleButton}}"/>

                <Path Grid.Column="2" Style="{StaticResource style_PathOfToggleButton}" Data="{StaticResource gmtry_Pause}" 
                      Margin="5,0,0,0" 
                      Fill="{Binding Path=(local:AttachedPropertyFactory.FillColor2), 
                                     RelativeSource={RelativeSource FindAncestor, AncestorType=ToggleButton}}"/>

            </Grid>
        </ToggleButton>

        <!-- stop -->
        <ToggleButton Grid.Column="2"
                      Width="48" Height="38"
                      HorizontalAlignment="Center"
                      local:AttachedPropertyFactory.BorderColor="#888B008B">
            <Path Style="{StaticResource style_PathOfToggleButton}" Data="{StaticResource gmtry_Stop}" Margin="3"/>
        </ToggleButton>

        <!-- bell -->
        <ToggleButton Grid.Column="3"
                      Width="48" Height="38"
                      HorizontalAlignment="Center"
                      local:AttachedPropertyFactory.BorderColor="#88006400">
            <Grid Margin="2">
                <Path Style="{StaticResource style_PathOfToggleButton}" Data="{StaticResource gmtry_BellIn}"/>
                <Path Style="{StaticResource style_PathOfToggleButton}" Data="{StaticResource gmtry_BellOut}" />
            </Grid>
        </ToggleButton>
    </Grid>
</UserControl>
