<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CycleBell"
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" x:Class="CycleBell.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="636" Width="374">
    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="FontAbuget" TargetType="{x:Type TextBlock}">
                <Setter Property="FontFamily" Value="pack://application:,,,/../../fonts/#Abuget" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="143*"/>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="274*"/>
        </Grid.RowDefinitions>

        <!--FontFamily="pack://application:,,,/../../fonts/#Abuget"-->

        <TextBlock Style="{StaticResource FontAbuget}"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Width="auto" 
                   FontSize="74" 
                   Text="Cycle Bell" TextWrapping="Wrap"
                   />
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" 
                       Text="preset" Margin="0,0,0,5" 
                       />
            <ComboBox Style="{DynamicResource MyComboBoxStyle1}">
                <Label>dfgg</Label>
                
            </ComboBox>
        </StackPanel>
        <Control Grid.Row="3" Style="{StaticResource ResourceKey=FocusVisual}"/>
        <DockPanel Grid.Row="2" Width="200" Background="Aqua">
            <Popup x:Name="ppp" 
                   Placement="Center"
                   PlacementRectangle="0,0,30,50" 
                   IsOpen="{Binding IsMouseOver, Mode=OneWay, RelativeSource={RelativeSource AncestorType=DockPanel}}"
                   PopupAnimation="Slide" 
                   AllowsTransparency="True">
                <TextBlock Background="Beige">dffddfdf</TextBlock>
            </Popup>
        </DockPanel>
    </Grid>
</Window>
